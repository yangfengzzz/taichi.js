{
  "name": "taichi.js",
  "version": "1.0.0",
  "description": "Modern GPU Compute Framework in Javascript",
  "homepage": "https://taichi-js.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmesingFlank/taichi.js"
  },
  "author": {
    "name": "Dunfan Lu",
    "email": "ldfrank533@outlook.com"
  },
  "main": "./dist/taichi.umd.js",
  "module": "./dist/taichi.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.tests.json floss --path tests -r ts-node/register",
    "test-debug": "cross-env TS_NODE_PROJECT=tsconfig.tests.json floss --path tests -r ts-node/register --debug",
    "test-cov": "cross-env TS_NODE_PROJECT=tsconfig.tests.json nyc --reporter=lcov floss --path tests -r ts-node/register",
    "ci": "pnpm install && npm run b:module && npm run b:types && npm run test-cov",
    "lint": "eslint packages/*/src --ext .ts",
    "watch": "cross-env NODE_ENV=development BUILD_TYPE=MODULE rollup -cw -m inline",
    "watch:umd": "cross-env NODE_ENV=development BUILD_TYPE=UMD rollup -cw -m inline",
    "b:types": "pnpm -r --filter=./packages/* run b:types",
    "b:module": "cross-env BUILD_TYPE=MODULE rollup -c",
    "b:umd": "cross-env BUILD_TYPE=UMD rollup -c",
    "b:all": "npm run b:types && cross-env BUILD_TYPE=ALL rollup -c",
    "clean": "pnpm -r exec rm -rf dist && pnpm -r exec rm -rf types",
    "start": "http-server -a 127.0.0.1 -p 8080"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@swc/core": "^1.3.57",
    "@swc/helpers": "^0.5",
    "@types/mocha": "^8.0.0",
    "@types/node": "^18.7.16",
    "@types/offscreencanvas": "^2019.6.4",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "cross-env": "^5.2.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "rollup": "^2.36.1",
    "rollup-plugin-glslify": "^1.2.0",
    "rollup-plugin-modify": "^3.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-swc3": "^0.8.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.8.4",
    "http-server": "^14.0.0"
  },
  "dependencies": {
    "@loaders.gl/core": "^3.1.8",
    "@loaders.gl/gltf": "^3.1.8",
    "@webgpu/types": "^0.1.20",
    "gl-matrix": "^3.4.3",
    "tslib": "^2.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "browser": {
    "fs": false,
    "child_process": false
  },
  "keywords": [
    "taichi",
    "webgpu",
    "gpu",
    "gpgpu",
    "shader",
    "graphics",
    "simulation",
    "render"
  ]
}
